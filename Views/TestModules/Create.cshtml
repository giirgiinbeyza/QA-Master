@model DermaLogic.Models.TestModule

@{
    ViewData["Title"] = "Yeni Modül";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0 fw-bold">➕ Yeni Modül Oluştur</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">Modül Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Sepet İşlemleri" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label fw-bold">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Bu modül ne işe yarıyor?"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <input type="submit" value="Oluştur" class="btn btn-success shadow-sm" />
                            <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>