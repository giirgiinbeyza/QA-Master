@{
    Layout = null;
    ViewData["Title"] = "YÖNETİCİ GİRİŞİ";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Süper Admin Girişi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        /* UYGULAMA GENELİ KOYU LACİVERT TEMA */
        body { 
            background-color: #112240; 
            display: flex; align-items: center; justify-content: center; height: 100vh; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .admin-card { 
            width: 100%; max-width: 400px; padding: 40px; border-radius: 15px; 
            background: #1d3557; 
            color: white; 
            border: 2px solid #dc3545; 
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }
        .form-control { 
            background-color: #0a192f; 
            border: 1px solid #233554; color: white; 
        }
        .form-control:focus {
            background-color: #0a192f; color: white; border-color: #dc3545; box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
        }
        /* Placeholder rengini kaldırmak için gerek yok ama stil bütünlüğü için kalsın */
        .form-control::placeholder {
            color: #8892b0; 
        }
        .btn-danger { 
            background-color: #dc3545; border: none; font-weight: bold; letter-spacing: 1px; padding: 12px;
            transition: all 0.3s ease;
        }
        .btn-danger:hover { 
            background-color: #bb2d3b; transform: translateY(-2px); box-shadow: 0 4px 10px rgba(220, 53, 69, 0.4);
        }
        .admin-icon {
            font-size: 4rem;
            color: #dc3545;
            margin-bottom: 20px;
        }
        .back-link {
            color: #64ffda; 
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.2s;
        }
        .back-link:hover {
            color: white;
        }
    </style>
</head>
<body>
    <div class="admin-card animate-fade-in">
        <div class="text-center mb-4">
            <i class="fas fa-user-shield admin-icon"></i>
            <h3 class="fw-bold text-danger">YÖNETİCİ PANELİ</h3>
            <p class="text-white-50 small">Sadece Yetkili Personel Girişi</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center p-2 small fw-bold">
                <i class="fas fa-exclamation-circle me-1"></i> @ViewBag.Error
            </div>
        }

        <form asp-controller="Access" asp-action="AdminLogin" method="post">
            <div class="mb-3">
                <label class="form-label text-white-50 small fw-bold">YÖNETİCİ MAİLİ</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-white-50"><i class="fas fa-envelope"></i></span>
                    <input type="text" name="email" class="form-control" required />
                </div>
            </div>
            <div class="mb-4">
                <label class="form-label text-white-50 small fw-bold">GÜVENLİK ŞİFRESİ</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-white-50"><i class="fas fa-lock"></i></span>
                    <input type="password" name="password" class="form-control" required />
                </div>
            </div>
            <button type="submit" class="btn btn-danger w-100 py-2 fw-bold">
                <i class="fas fa-sign-in-alt me-2"></i> SİSTEME GİRİŞ
            </button>
        </form>

        <div class="text-center mt-4">
            <a href="/Access/Login" class="back-link">
                <i class="fas fa-arrow-left me-1"></i> Normal Üye Girişine Dön
            </a>
        </div>
    </div>
</body>
</html>