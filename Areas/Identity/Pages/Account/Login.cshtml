@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap - QA Master</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body { background-color: #112240; display: flex; align-items: center; justify-content: center; height: 100vh; font-family: 'Segoe UI', sans-serif; }
        .login-card { width: 100%; max-width: 400px; padding: 40px; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.5); background: #1d3557; color: white; border: 1px solid #233554; }
        .form-control { background-color: #0a192f; border: 1px solid #233554; color: white; }
        .form-control:focus { background-color: #0a192f; color: white; border-color: #64ffda; box-shadow: none; }
        .btn-primary { background-color: #64ffda; color: #0a192f; font-weight: bold; border: none; }
        .btn-primary:hover { background-color: #52d1b1; }
        a { color: #64ffda; text-decoration: none; }
        a:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="text-center mb-4">
            <div class="mb-3" style="font-size: 3rem;">🔐</div>
            <h2 class="fw-bold text-white">QA Master</h2>
            <p class="text-white-50">Yönetici Girişi</p>
        </div>

        <form id="account" method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3 small"></div>

            <div class="mb-3">
                <label class="form-label text-white-50 small">Email</label>
                <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="admin@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label class="form-label text-white-50 small">Şifre</label>
                <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>
            
            <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2">
                🚀 Giriş Yap
            </button>
        </form>

        <div class="text-center mt-4">
            <span class="text-white-50 small">Hesabın yok mu?</span>
            <br>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold">
                Hemen Üye Ol
            </a>
        </div>
        
        <div class="text-center mt-4 text-white-50">
            <small>&copy; 2026 QA Master System</small>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>