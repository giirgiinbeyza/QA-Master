@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0" style="width: 400px; background-color: #112240; border: 1px solid #233554;">
        <div class="card-body p-5">
            
            <div class="text-center mb-4">
                <div class="bg-success rounded-circle d-inline-flex justify-content-center align-items-center mb-3 shadow-lg" style="width: 70px; height: 70px;">
                    <span style="font-size: 2rem;">📝</span>
                </div>
                <h3 class="fw-bold text-white">Kayıt Ol</h3>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3 small"></div>

                <div class="mb-3">
                    <label class="form-label text-white fw-bold small">Email</label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" 
                           style="background-color: #0a192f; border-color: #233554; color: white;" 
                           placeholder="ornek@email.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label text-white fw-bold small">Şifre</label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" 
                           style="background-color: #0a192f; border-color: #233554; color: white;" 
                           placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label text-white fw-bold small">Şifre Tekrar</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" 
                           style="background-color: #0a192f; border-color: #233554; color: white;" 
                           placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button id="registerSubmit" type="submit" class="btn btn-success btn-lg shadow fw-bold">
                        ✅ Kayıt Ol
                    </button>
                </div>
            </form>

            <div class="text-center mt-4 border-top border-secondary pt-3">
                <p class="small text-white-50 mb-0">
                    Zaten hesabın var mı? 
                    <a asp-page="./Login" class="text-success fw-bold text-decoration-none">
                        Giriş Yap
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}